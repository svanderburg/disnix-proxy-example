#!/bin/bash -e

export PATH=@PREFIX@/bin:$PATH

case "$1" in
    activate)
	nohup hello-world-server @port@ > /var/log/$(basename @PREFIX@).log & pid=$!
	echo $pid > /var/run/$(basename @PREFIX@).pid
        ;;
    deactivate)
        kill $(cat /var/run/@PREFIX@.pid)
	rm -f /var/run/$(basename @PREFIX@).pid
        ;;
esac
